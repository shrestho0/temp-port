---
import type { Experience } from "@/data/experience";
import MaybeLink from "./MaybeLink.astro";

type Props = Experience;

const { title, techs, time_line, company_link, company, work_location } =
    Astro.props;

const formatTechs = (values: string[]) =>
    values.toString().replaceAll(",", " • ");
---

<div>
    <MaybeLink
        isLink={company_link ? true : false}
        classes="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 md:flex-row md:items-center"
        href={company_link ? company_link : ""}
    >
        <div
            class="grid flex-1 grid-cols-1 justify-between gap-4 break-all md:grid-cols-2"
        >
            <div>
                <p class="text-md text-neutral-100">{company}</p>
                <p class="break-words">{title}</p>
                <p class="break-words">• {work_location}</p>
            </div>
            <div class="md:text-right">
                <p>{time_line}</p>
                <p>{formatTechs(techs)}</p>
            </div>
        </div>

        {
            company_link && (
                <svg
                    width="18"
                    height="18"
                    viewBox="0 0 18 18"
                    fill="none"
                    class="transition-all duration-300 group-hover:translate-x-1"
                >
                    <path
                        d="M5.25 12.75L12.75 5.25"
                        stroke="#999999"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                    <path
                        d="M5.25 5.25H12.75V12.75"
                        stroke="#999999"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                </svg>
            )
        }
    </MaybeLink>

